<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".DashboardScreen">

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_margin="10dp"
        android:id="@+id/topHeadlinesView"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <com.c1ph3rj.simplelogin.BubblePageIndicatorPkg.BubblePageIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            app:bpi_fillColor="@color/teal_700"
            app:bpi_pageColor="@color/lightGrey"
            app:bpi_radius="4dp"
            app:bpi_marginBetweenCircles="6dp"
            app:bpi_onSurfaceCount="3"
            app:bpi_risingCount="2"
            android:id="@+id/dotIndicator"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10">

    </LinearLayout>



</LinearLayout>