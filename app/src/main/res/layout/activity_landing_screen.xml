<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".LandingScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="10"
        android:gravity="bottom"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome,"
            android:textSize="40sp"
            android:gravity="bottom"
            android:fontFamily="@font/cabin_bold_"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The all in one\nPersonalized App\nFor everything important."
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/cabin_bold_"/>


        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="20dp"
            android:layout_gravity="center">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_rawRes="@raw/landing_page_anim"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Sign In to \nContinue."
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/cabin_bold_"
            android:gravity="center|bottom"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Sign In"
                android:id="@+id/signIn"
                android:textSize="20sp"
                android:gravity="center"
                android:fontFamily="@font/oswald_bold"
                android:textColor="@color/teal_700"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/teal_700"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Sign Up"
                android:id="@+id/signUp"
                android:textSize="20sp"
                android:gravity="center"
                android:fontFamily="@font/oswald_bold"
                android:textColor="@color/teal_700"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>